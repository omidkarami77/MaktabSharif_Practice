<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="17.0dip"
        android:textColor="#ff000000"
        android:gravity="center_vertical"
        android:id="@+id/txt_list_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Doing Maktab Homework"
        android:layout_marginStart="24.0dip"
        android:layout_alignParentStart="true" />
    <TextView
        android:textSize="14.0dip"
        android:id="@+id/txt_list_item_subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.0dip"
        android:text="Date and Time Aren't Set"
        android:layout_below="@id/txt_list_item_title"
        android:layout_marginStart="24.0dip"
        android:layout_alignParentStart="true" />
    <Button
        android:textSize="13.0dip"
        android:gravity="center"
        android:id="@+id/btn_list_item_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:drawableStart="@drawable/ic_done_black_24dp"
        android:layout_marginStart="10.0dip"
        android:layout_alignParentEnd="true" />
</RelativeLayout>